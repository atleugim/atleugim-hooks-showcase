---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="link-card p-0.5 bg-white list-none flex rounded-md bg-[100%] hover:bg-[0] focus-within:bg-[0] shadow-lg group focus-within:outline-none"
>
  <a
    href={href}
    class="opacity-80 bg-white p-4 flex flex-col space-y-2 rounded-[0.25rem]"
  >
    <h2 class="text-xl">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="text-gray-600 font-light">
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    background-image: var(--accent-gradient);
    background-size: 400%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card:hover h2 {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
</style>
